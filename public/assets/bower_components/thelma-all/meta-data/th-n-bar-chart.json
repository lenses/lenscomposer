{
  "name": "th-n-bar-chart",
  "description": "Thelma Bar Chart",
  "category":"chart",
  "version": "0.0.1",
  "thumbnail":"nbar.jpg", 
  "tags":["chart", "bar"],
  "helpLink":"http://composer.thelma.co/admin/composer/demos/chartlabels",
  "width":280,
  "height":200,
  "inputAttr": {
    "wrapLabels":{"friendly":"Wrap Labels?", "type":"boolean", "default": true},
    "showHorizontalAxis":{"friendly":"Show Axis?", "type":"boolean", "default": false},
    "chartData":{"friendly":"Data", "type":"table-repeating","rows":2, 
      "fields":{
        "label":{"friendly":"Label", "type":"string", "default":"Player"},
        "value":{"friendly":"Value", "type":"int", "default":15},
        "display_value":{"friendly":"Display Value", "type":"string", "default":"$15"},
        "color":{"friendly":"Color", "type":"colorPicker", "colorDefault":"accent", "default":""}
      },
      "default":[
        {"label": "Player", "value": 15, "display_value": "$15", "color":""},
        {"label": "Vendor", "value": 20, "display_value": "$20", "color":""},
        {"label": "Mascot", "value": 45, "display_value": "$45", "color":""}
      ]
    }
  }
}