{
  "name": "th-text",
  "description": "Th text w/Markdown",
  "category":"textual",
  "version": "0.0.1",
  "thumbnail":"markdown.jpg",
  "tags":["textual", "Markdown"],
  "helpLink":"http://composer.thelma.co/admin/composer/demos/markdown",
  "width":140,
  "height":100,
  "inputAttr": {
    "content":{"friendly":"Text/Markdown", "type":"content", "default":"Enter Text..."},
    "type":{
      "friendly":"Type",
      "type":"dropdown", 
      "values": ["large-headline","headline","mainpoint", "submainpoint", "subpoint", "chart", "label", "caps"],
      "default": "mainpoint"
    },
    "align":{
      "friendly":"Align",
      "type":"dropdown", 
      "values": ["left", "right", "center", "justify"],
      "default": "left"
    },
    "color":{"friendly":"Text Color", "type":"colorPicker", "colorDefault":"foreground1", "default":""},
    "highlighting":{
      "friendly":"Highlighting", 
      "type":"colorPicker", 
      "colorDefault":"", 
      "default":""
    },
    "background":{
      "friendly":"Background Color", 
      "type":"colorPicker", 
      "colorDefault":"", 
      "default":""
    },
    "opacity":{
      "friendly":"Background Opacity", 
      "type":"int", 
      "default":1
    },
    "markdown":{"friendly":"Markdown?", "type":"boolean", "default":"true"}
  }
}