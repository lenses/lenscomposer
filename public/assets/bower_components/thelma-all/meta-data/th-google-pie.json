{
  "name": "th-google-pie",
  "description": "Pie Chart by Google",
  "category":"chart",
  "version": "0.0.1",
  "thumbnail":"google-pie.jpg", 
  "tags":["chart", "pie"],
  "helpLink":"",
  "width":280,
  "height":200,
  "inputAttr": {
    "type":{"friendly":"Pie or Donut", "type":"dropdown", "values": ["pie","donut"], "default": "pie"},
    "dataLabel":{"friendly":"Data Label", "type":"string", "default":"Popularity"},
    "tooltipText":{"friendly":"Tooltip Text", "type":"dropdown", "values": ["both","value","percentage"], "default": "both"},
    "chartData":{"friendly":"Data", "type":"table-repeating","rows":2, 
      "fields":{
        "label":{"friendly":"Label", "type":"string", "default":""},
        "value":{"friendly":"Value", "type":"int", "default":""},
	     "split":{"friendly":"Split", "type": "int", "default": ""}
      },
      "default":[
            {"label": "Germany", "value": 100},
            {"label": "Switzerland", "value": 50},
            {"label": "France", "value": 300, "split": 0.2},
            {"label": "Austria", "value": 200}
        ]
    },
    "backgroundColor":{"friendly":"Background Color", "type":"colorPicker", "default":""},
    "legend":{"friendly":"Show Legend?", "type":"boolean", "default": true}
  }
}
